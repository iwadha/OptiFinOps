---
const { 
  title, 
  description, 
  containerClass = '', 
  titleClass = '', 
  descriptionClass = '' 
} = Astro.props;
---

<section class={`py-12 md:py-20 px-4 md:px-6 ${containerClass}`}>
  <div class="container mx-auto">
    <div class="text-center mb-8 md:mb-12">
      <h2 class={`
        text-2xl md:text-3xl lg:text-4xl 
        font-bold mb-3 md:mb-6 
        ${titleClass}
      `}>
        {title}
      </h2>
      <p class={`
        text-base md:text-lg 
        text-gray-600 dark:text-gray-300 
        max-w-2xl mx-auto 
        ${descriptionClass}
      `}>
        {description}
      </p>
    </div>
    
    <slot />
  </div>
</section>
